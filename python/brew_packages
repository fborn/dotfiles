#!/usr/bin/env bash

# brew installer helper, normally run this from 'dot'
# check: http://docs.python-guide.org/en/latest/starting/install/osx/
TMPPATH=$PATH
PATH=/usr/local/bin:$PATH

brew install python || brew upgrade python
brew install ansible || brew upgrade ansible

# NB: this installs under they regular python interpreter
sud easy_install pip
sudo pip install --upgrade setuptools
sudo pip install --upgrade pip

brew linkapps python

export PATH=$TMPPATH
